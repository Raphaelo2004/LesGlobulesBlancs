{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('connexion/connexion.css') }}">
{% endblock %}

{% block body %}
<div class="container">
  <header class="header">
    <img src="{{ asset('assets/images/LogoCPAM22_RVB.jpg') }}" alt="Logo" class="logo">
  </header>

  <main class="form-container">
    <h2 class="welcome-title">Connectez-vous&nbsp;!</h2>

    {{ form_start(form) }}
      <div class="form-group">
        {{ form_widget(form.identifiant, {
            'attr': {'placeholder': 'identifiant', 'class': 'input-field'}
        }) }}
      </div>
      
      <div class="form-group">
        {{ form_widget(form.email, {
            'attr': {'placeholder': 'Email Address', 'class': 'input-field'}
        }) }}
      </div>

      <button type="submit" class="btn-submit">Se connecter</button>
    {{ form_end(form) }}

    <p class="already">
  Vous ne possédez de compte&nbsp;?
  <a href="{{ path('connexion') }}" class="login-link">Inscrivez-vous</a>
</p>


    <hr class="separator">
  </main>

  <footer class="footer">
    <a href="/accessibilite" class="footer-link">Accessibilité</a> |
    <a href="/confidentialite-securite" class="footer-link">Confidentialité & Sécurité</a> |
    <a href="https://www.ameli.fr" 
       class="footer-link" 
       target="_blank" 
       rel="noopener">
       Contactez-nous
    </a>
</footer>

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('connexion/connexion.js') }}"></script>
{% endblock %}
