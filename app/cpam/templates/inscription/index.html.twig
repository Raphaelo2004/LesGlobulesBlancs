{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/connexion/connexion.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    
    <!-- HEADER distinct -->
    <header class="header">
        <img src="{{ asset('assets/images/LogoCPAM22_RVB.jpg') }}" alt="Logo" class="logo">
    </header>
    
    <!-- Le contenu centré verticalement -->
    <div class="content">
        <main class="form-container">
            <h2 class="welcome-title">Bienvenue&nbsp;!</h2>

            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.identifiant, {
                        'attr': {'placeholder': 'identifiant', 'class': 'input-field'}
                    }) }}
                </div>
                
                <div class="form-group">
                    {{ form_widget(form.email, {
                        'attr': {'placeholder': 'Email Address', 'class': 'input-field'}
                    }) }}
                </div>

                <button type="submit" class="btn-submit">S’inscrire</button>
            {{ form_end(form) }}

            <p class="already">
                Vous possédez déjà un compte&nbsp;?
                <a href="{{ path('app_connexion2') }}" class="login-link">Connectez-vous</a>
            </p>

            <hr class="separator">
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer">
        <a href="/accessibilite" class="footer-link">Accessibilité</a> |
        <a href="/confidentialite-securite" class="footer-link">Confidentialité & Sécurité</a> |
        <a href="https://www.ameli.fr"
           class="footer-link"
           target="_blank"
           rel="noopener">
           Contactez-nous
        </a>
    </footer>

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/connexion/connexion.js') }}"></script>
{% endblock %}
